{
  "name": "tristancode-interactive",
  "version": "0.1.0",
  "private": true,
  "description": "Interactive components for tristancode.com blog posts",
  "type": "module",
  "scripts": {
    "build": "esbuild src/entries/*.ts --bundle --outdir=../static/js/interactive --format=esm --splitting --minify --target=es2020",
    "dev": "esbuild src/entries/*.ts --bundle --outdir=../static/js/interactive --format=esm --splitting --target=es2020 --watch",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "devDependencies": {
    "@types/d3": "^7.4.3",
    "esbuild": "^0.27.3",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "d3": "^7.9.0"
  }
}
